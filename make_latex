#! /bin/bash
# this is a script to create a latex document template

echo "%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%"
echo "%%%%   Begin Document  %%%%%%%"
echo "%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%"
echo "\documentclass[12pt, letterpaper]{article}"
echo "\usepackage[vmargin=1in, hmargin=1in]{geometry}"
echo "\begin{document}"
echo " "
echo " "
echo " "
echo " "
echo " "
echo " "
echo " "
echo "%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%"
echo "%%%%%%%%%%   Heading    %%%%%%%%%%%%%"
echo "%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%"
echo "\noindent{Kevin Sliker}"
echo " "
echo "\noindent{\today}"
echo " "
echo "\noindent{Topic of discussion: }"
echo " "
echo " "
echo " "
echo " "
echo " "
echo " "
echo " "
echo "%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%"
echo "%%%%%%%%   Title of Paper     %%%%%%%"
echo "%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%"
echo "\begin{center}"
echo "\textbf{Title of my paper}"
echo "\end{center}"
echo "\vspace{0.2in}"
echo " "
echo " "
echo " "
echo " "
echo " "
echo " "
echo " "
echo " "
echo "%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%"
echo "%%%%   Main Content         %%%%%%%%%"
echo "%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%"
echo " "
echo " "
echo " "
echo " "
echo " "
echo " "
echo " "
echo " "
echo " "
echo "%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%"
echo "%%%%%     End of Document    %%%%%%%%"
echo "%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%"
echo "\end{document}"
